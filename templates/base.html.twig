<!DOCTYPE html>
<html data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Wiki Coaster{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Wiki Coaster</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}" class="btn btn-secondary mx-1">Se déconnecter</a>
                {% else %}
                  <a href="{{ path('app_register') }}" class="btn btn-primary mx-1">Créer un compte</a>
                  <a href="{{ path('app_login') }}" class="btn btn-secondary mx-1">S'identifier</a>
                {% endif %}
                </div>
              </div>
            </div>
        </nav>
        <main class="d-flex flex-nowrap">
            <div class="d-flex flex-column flex-shrink-0 shadow" id="side-menu">
                <div class="lead">Menu</div>
                {# Main menu #}
                <!-- Comment HTML -->
                <nav class="nav flex-column">
                    <a class="nav-link" href="{{ path('app_coaster_index') }}"><i class="bi bi-minecart"></i> Coasters</a>
                    <a class="nav-link" href="{{ path('app_park_index') }}"><i class="bi bi-geo"></i> Parcs</a>
                    <a class="nav-link" href="{{ path('app_category_index') }}"><i class="bi bi-tags"></i> Catégories</a>
                    <a class="nav-link" href="{{ path('app_user_index') }}"><i class="bi bi-people-fill"></i> Utilisateurs</a>
                </nav>
            </div>
            <div class="p-4 flex-grow-1">
                <div id="main-content">
                    {% block body %}{% endblock %}
                </div>   
            </div>
        </main>    
    </body>    
</html>
